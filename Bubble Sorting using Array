//Sorting program by Shubham
#include<iostream>
using namespace std;
void bubble_sort(int arr_temp[],int tot_elem){
    bool swapped;
    for(int i=0;i<tot_elem-1;i++){
        swapped = false;
        for(int j=0;j<tot_elem-i-1;j++){
            if(arr_temp[j]>arr_temp[j+1]){
                swap(arr_temp[j],arr_temp[j+1]);
                swapped = true;
            }
        }
        if(!swapped){
            break;
        }
    }
} 
int main(){
    int tot_elements;
    cout<<"Enter the total number of elements you want in the array : ";
    cin>>tot_elements;
    int main_array[tot_elements];
    cout<<endl;
    for(int i=0;i<tot_elements;i++){
        cout<<"Enter the "<<i+1<<" element of the array : ";
        cin>>main_array[i];
    }
    cout<<"\nThe formed array is : ";
    for(int i=0;i<tot_elements;i++){
        cout<<main_array[i]<<" ";
    }
    cout<<"\nThe array after sorting is : ";
    bubble_sort(main_array,tot_elements);
    for(int i=0;i<tot_elements;i++){
        cout<<main_array[i]<<" ";
    }

    
}
